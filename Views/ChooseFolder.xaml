<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="WocForC_.Views.ChooseFolder"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:WocForC_.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="Azure">
        <StackPanel Spacing="8">
            <TextBlock Text="Only one Folder can be picked" />
            <Button x:Name="PickFolderButton" Content="Pick a folder" Click="PickFolderButton_Click" />
            <Button x:Name="DeletePickedFolderButton" Content="Delete a folder" Click="DeletePickedFolderButton_Click" />
            <TextBlock x:Name="PickedFolderTextBlock" Text=""/>
        </StackPanel>
    </Grid>
</Page>
